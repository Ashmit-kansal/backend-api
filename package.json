{
  "name": "manga-backend-api",
  "version": "1.0.0",
  "description": "Backend API for manga reader application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "prod": "cross-env NODE_ENV=production node server.js",
    "seed": "node seed.js",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "logs:clear": "rm -rf logs/*.log",
    "cleanup-logs": "node cleanup-logs.js",
    "test-logging": "node test-logging.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "manga",
    "api",
    "express",
    "mongodb"
