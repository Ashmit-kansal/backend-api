# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/manga-reader

# Server Configuration
PORT=3004
FRONTEND_URL=${FRONTEND_URL:-http://localhost:3000}
BASE_URL=${BASE_URL:-http://localhost:3004}

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

###############################
# Email Configuration (SMTP)
###############################
# Select provider: smtp | mock (mock = logs only)
EMAIL_PROVIDER=smtp

# Core sender address (should match your Zoho authenticated address)
FROM_EMAIL=your@domain.com

# SMTP (Zoho)
# For India region you may use smtp.zoho.in; global usually smtp.zoho.com
SMTP_HOST=smtp.zoho.com
SMTP_PORT=465            # 465 SSL, or 587 STARTTLS
SMTP_SECURE=true          # true for 465, false for 587
SMTP_USER=your@domain.com
SMTP_PASS=your_app_password  # Generate in Zoho security > app passwords

# Cloudflare R2 Configuration (for image uploads)
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_r2_bucket_name
R2_PUBLIC_URL=https://your-public-domain.com

# Cloudinary Configuration (legacy - can be removed)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Site Configuration
SITE_NAME=Manga Reader
SITE_DESCRIPTION=Read manga online for free with high-quality scans
SITE_URL=${SITE_URL:-http://localhost:3000}

# Logging Configuration (to prevent Railway rate limiting)
LOG_LEVEL=warn
NODE_ENV=production