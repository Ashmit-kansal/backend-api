# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/manga-reader

# Server Configuration
PORT=3004
FRONTEND_URL=${FRONTEND_URL:-http://localhost:3000}
BASE_URL=${BASE_URL:-http://localhost:3004}

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (SendGrid)
MANGA_READER_EMAIL=your_sendgrid_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# Cloudinary Configuration (if using image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Site Configuration
SITE_NAME=Manga Reader
SITE_DESCRIPTION=Read manga online for free with high-quality scans
SITE_URL=${SITE_URL:-http://localhost:3000}

# Logging Configuration (to prevent Railway rate limiting)
LOG_LEVEL=warn
NODE_ENV=production